<section id="search" class="search-wrap">
  <h1>Find a user</h1>

  {{!-- Search form for the user table --}}
  <form action="/user/search" class="search-form bg-white">
    <i class="fas fa-search"></i>

    {{!-- User Id --}}
    <div class="form-group row">
      <label for="userIdValue" class="col-sm-4 col-form-label">User Id</label>
      <div class="col-sm-8">
        <input type="search" class="form-control" name="userIdValue" id="userIdValue" placeholder="e.g. 2">
      </div>
    </div>

    {{!-- User name --}}
    <div class="form-group row">
      <label for="userNameValue" class="col-sm-4 col-form-label">User Name</label>
      <div class="col-sm-8">
        <input type="search" class="form-control" name="userNameValue" id="userNameValue"
          placeholder="e.g. zzzzzzsleepy">
      </div>
    </div>

    {{!-- User password --}}
    <div class="form-group row">
      <label for="userPasswordValue" class="col-sm-4 col-form-label">User Password</label>
      <div class="col-sm-8">
        <input type="password" class="form-control" name="userPasswordValue" id="userPasswordValue"
          placeholder="e.g. iam-tired_ok">
      </div>
    </div>

    {{!-- Submit button --}}
    <input type="submit" value="Search">

    {{!-- Button to add a user --}}
    <div class="d-flex justify-content-end">
      <button class="btn btn-info btn-md add-button">
        <a href="/user/add-user">
          Add a user
        </a>
      </button>
    </div>

  </form>

</section>

<section id="user" class="container">
  <h1>All a user</h1>

  {{#each user}}
  <div class="app">
    <h3>User ID: {{userId}}</h3>
    <ul>
      <li>User Name: {{userName}}</li>
      <li>User Password: {{userPassword}}</li>
    </ul>

    {{!-- Edit user --}}
    <button class="btn btn-info btn-sm edit-button">
      <a href="/user/edit-user">Edit</a>
    </button>
    <button id="user-delete" class="btn btn-danger btn-sm delete-button">
      Delete
    </button>
  </div>
  {{else}} <p>User Not Found</p>

  {{/each}}
</section>