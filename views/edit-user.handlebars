<section id="add" class="container">
  <div class="form-wrap">
    <h1>Add a user</h1>
    <p>Your contact email will be shared with registered users to apply to your booking</p>

    {{!-- Display erros here --}}
    {{#each errors}}
    <div class="error">
      <p>{{text}}</p>
    </div>
    {{/each}}

    {{!-- Add user form --}}
    <form action="/user/add-user" method="POST">

      {{!-- User name --}}
      <div class="input-group">
        <label for="userName">User Name</label>
        <input type="text" name="userName" id="userName" class="input-box" placeholder="Enter a username" maxlength="30"
          value={{userName}}>
      </div>

      {{!-- User password --}}
      <div class="input-group">
        <label for="userPassword">User Password</label>
        <input type="text" name="userPassword" id="userPassword" class="input-box" placeholder="Enter a password"
          minlength="9" maxlength="12" required autocomplete="off" value={{userPassword}}>
      </div>

      {{!-- Submit button --}}
      <input type=" submit" value="Add user" class="btn btn-reverse">
    </form>
  </div>
</section>