<section id="edit" class="container">
  <div class="form-wrap">
    <h1>Edit a user</h1>
    <p>Your contact email will be shared with registered users to apply to your booking</p>

    {{!-- Display erros here --}}
    {{#each errors}}
    <div class="error">
      <p>{{text}}</p>
    </div>
    {{/each}}

    {{!-- Add user form --}}
    <form action="/user/edit-user" method="POST">

      {{!-- User Id --}}
      <div class="input-group">
        <label for="existingUserId">User Id</label>
        <input type="text" name="existingUserId" id="existingUserId" class="input-box" placeholder="Enter the user Id"
          maxlength="30" value={{existingUserId}}>
      </div>

      {{!-- User name --}}
      <div class="input-group">
        <label for="newUserName">New User Name</label>
        <input type="text" name="newUserName" id="newUserName" class="input-box" placeholder="Enter a new user name"
          maxlength="30" value={{newUserName}}>
      </div>

      {{!-- User password --}}
      <div class="input-group">
        <label for="newUserPassword">New User Password</label>
        <input type="text" name="newUserPassword" id="newUserPassword" class="input-box"
          placeholder="Enter a new password" minlength="9" maxlength="12" required autocomplete="off"
          value={{newUserPassword}}>
      </div>

      {{!-- Submit button --}}
      <input type="submit" value="Edit user" class="btn btn-reverse">
    </form>
  </div>
</section>